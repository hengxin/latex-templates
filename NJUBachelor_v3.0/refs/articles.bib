@article{
HartschuhPedrosa-5,
   Author = {Hartschuh, Achim and Pedrosa, Hermeneglido N. and Novotny, Lukas and Krauss, Todd D.},
   Title = {Simultaneous Fluorescence and Raman Scattering from Single Carbon Nanotubes},
